<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kr.hs.emirim.petto99.calculator.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_n1"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="numberDecimal" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_n2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_n1"
        android:textSize="20sp"
        android:inputType="numberDecimal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_plus"
        android:id="@+id/but_plus"
        android:layout_below="@+id/edit_n2"
        android:layout_alignLeft="@+id/but_minus"
        android:layout_alignStart="@+id/but_minus"
        android:background="#98c1e8" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_minus"
        android:id="@+id/but_minus"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/but_plus"
        android:layout_alignLeft="@+id/but_divide"
        android:layout_alignStart="@+id/but_divide"
        android:background="#98c1e8" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_divide"
        android:id="@+id/but_divide"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/but_minus"
        android:layout_alignLeft="@+id/but_multiply"
        android:layout_alignStart="@+id/but_multiply"
        android:background="#98c1e8" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_multiply"
        android:id="@+id/but_multiply"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/but_divide"
        android:layout_centerHorizontal="true"
        android:background="#98c1e8" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_reslut"
        android:id="@+id/text_result"
        android:textSize="30sp"
        android:textColor="#ac1b1b"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
